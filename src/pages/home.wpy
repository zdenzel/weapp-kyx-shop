    image{ width: 100%; height: 100%;}
    .full, .half{
        width: 345rpx;
        height: 380rpx;
        position: relative;
        margin-top: @margin;
        background-color: @color-maincolor;
        &:nth-child(1){ margin-top: 0;}
    }
    .half{ height: 180rpx; }
    .item{
        float: left;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 345rpx;
        height: 380rpx;
        margin-top: @margin;
        margin-left: @margin;
    }
    .auto-w{ width: auto; }
    .auto-h{ height: auto; }
}
</style>